{% extends  '::base.html.twig' %}

{% block sidebartitle %}Urządzenia{% endblock %}

{% block sidebaritems %}
    <li><a href="{{ path('ZubiDeviceBundle_homepage') }}">Lista urządzeń</a></li>
    <li class="active"><a href="{{ path('ZubiDeviceBundle_addStation') }}">Dodaj urządzenie</a></li>
    <li><a href="{{ path('ZubiDeviceBundle_measurements') }}">Lista pomiarów</a></li>
{% endblock %}

{% block body %}
    <h3>Dodaj urządzenie</h3><br />

    <form action="{{ path('ZubiDeviceBundle_addStation') }}" method="post" {{ form_enctype(form) }} class="formularz"/>
    	{% if form.vars.errors|length %}
        	{{ form_errors(form, { 'attr': {'class': 'alert'} }) }}
    	{% endif %}

        {{ form_rest(form) }}

        <input type="submit" value="Dodaj urządzenie" class="btn btn-primary" />

    </form>
   <script type="text/javascript">
   	$(function(){
   		$('.formularz ul').wrap('<div class="alert alert-error"></div>');
   	});
   </script>

   <style type="text/css">
   	.formularz ul { margin: 0 15px; }
   </style>
    
{% endblock %}